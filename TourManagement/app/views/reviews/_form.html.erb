<%= form_with(model: review, local: true) do |form| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if tours_taken_by_current_user.length.positive? %>

    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>

    <div class="field">
      <%= form.label :tour_id %>
      <!-- Drop down for selecting tour: https://guides.rubyonrails.org/form_helpers.html -->
      <%= form.select(:tour_id, options_from_collection_for_select(tours_taken_by_current_user, :id, :name)) %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  <% else %>
    You cannot create a review, because there are no completed tours that you have booked
  <% end %>

<% end %>
