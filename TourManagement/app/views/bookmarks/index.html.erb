<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Tour</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.user.name %></td>
        <td><%= bookmark.tour.name %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- NO LINK to new bookmark - bookmarks must be created from tour -->
