# This file contains application code to help control displays.
#
-->

<!DOCTYPE html>
<html>
  <head>
    <title>TourManagement</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Application Title -->
    <h1 style="color: #cc0000;">Tour Management System</h1>

    <!-- Note current user's name -->
    <!-- Do this up at the top so that it remains in the same place regardless of the page-specific content -->
    <% if logged_in? %>
      <h2 style="color: blue">
        Welcome <%= current_user.user_type %>!  <%= current_user.name %>
      </h2>
    <% end %>

    <!-- https://stackoverflow.com/questions/9390778/best-practice-method-of-displaying-flash-messages -->
    <% flash.each do |key, value| %>
      <!-- We use flash to keep track of search filters (don't show that stuff onscreen -->
      <% if key != "filters" %>
        <%= content_tag :div, value, class: "flash #{key}" %>
      <% end %>
    <% end %>

    <!-- Specific view content -->
    <%= yield %>

    <!-- Links to other views -->
    <h3>Links</h3>

    <!-- Need to show all users to only admin and users who have not logged in.
    Ability to view users according is subject to some conditions to customers and agent-->

    <% unless current_user_customer? || current_user_agent? %>
      <p>
        <b>Users: </b>
        <%= link_to "Show All Users", users_url %>
      </p>
    <% end %>

    <% if current_user_agent? %>
      <p>
        <b> Bookmarks: </b>
        <%= link_to 'Show All Bookmarked Tours', bookmarks_path %>
        <%= link_to 'Show Bookmarks for My Tours', bookmarks_path(listing_user: current_user) %>
      </p>
    <% end %>

    <% if current_user_can_see_their_bookmarks? %>
      <p>
        <b> Bookmarks: </b>
        <%= link_to 'Show My Bookmarks', bookmarks_path(bookmarks_user: current_user) %>
      </p>
    <% end %>


    <% if current_user_can_see_tours? %>
      <p>
        <b>Tours: </b>
        <%= link_to "Show All Tours", tours_url %>
        <% if current_user_agent? %>
          <%= link_to 'Show My Tours', tours_path(tour_creator: current_user) %>
        <% end %>
      </p>
    <% end %>

    <% if current_user_can_see_reviews? %>
     <p>
       <b>Reviews: </b>
       <%= link_to "Show All Reviews", reviews_url %>
       <% if current_user_customer? %>
         <%= link_to 'Show My Reviews', reviews_path(reviews_user: current_user) %>
       <% end %>
    </p>
    <% end %>

    <% if current_user_can_see_locations? %>
      <p>
        <b>Locations: </b>
        <%= link_to "Show All Locations", locations_url %>
      </p>
    <% end %>

    <!-- Log In / Log Out -->
    <% if logged_in? %>
      <%= link_to "Log out", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Log in", login_path %>
    <% end %>

    <!-- Debug per https://www.railstutorial.org/book/sign_up -->
    <%= debug(params) if Rails.env.development? %>

  </body>
</html>